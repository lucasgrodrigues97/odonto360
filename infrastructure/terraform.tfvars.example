# Example Terraform variables file for Odonto360
# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Project Configuration
project_name = "odonto360"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
admin_cidr = "0.0.0.0/0"  # Restrict this to your IP in production

# EC2 Configuration
instance_type = "t3.medium"
min_size = 1
max_size = 5
desired_capacity = 2

# Database Configuration
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_name = "odonto360"
db_username = "admin"
db_password = "your-secure-password-here"  # Change this!
db_backup_retention_period = 7

# Monitoring Configuration
log_retention_days = 30
enable_monitoring = true
enable_logging = true

# Auto Scaling Configuration
enable_auto_scaling = true
scale_up_threshold = 70
scale_down_threshold = 30
scale_up_cooldown = 300
scale_down_cooldown = 300

# Security Configuration
enable_encryption = true
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this in production

# Domain Configuration (optional)
domain_name = ""  # e.g., "odonto360.com"
ssl_certificate_arn = ""  # ARN of SSL certificate for HTTPS
enable_https = false

# Backup Configuration
backup_schedule = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"

# Additional Tags
tags = {
  Owner       = "Your Name"
  Project     = "Odonto360"
  Environment = "production"
  CostCenter  = "IT"
}
